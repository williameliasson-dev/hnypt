{
  "apiVersion": "v1",
  "kind": "Pod",
  "metadata": {
    "name": "mongodb-honeypot",
    "labels": {
      "app": "mongodb",
      "type": "honeypot"
    }
  },
  "spec": {
    "containers": [
      {
        "name": "mongodb",
        "image": "mongo:latest",
        "env": [
          {
            "name": "MONGO_INITDB_ROOT_USERNAME",
            "value": "admin"
          },
          {
            "name": "MONGO_INITDB_ROOT_PASSWORD",
            "value": "password123"
          }
        ],
        "ports": [
          {
            "containerPort": 27017
          }
        ]
      }
    ]
  }
}
